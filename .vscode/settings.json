{
	"editor.quickSuggestions": {
		"strings": true
	},
	"files.associations": {
		"*.module.css": "postcss",
		"*.css": "tailwindcss"
	},
	"tailwindCSS.classAttributes": ["class", "className", "ngClass", "tw"],
	"tailwindCSS.includeLanguages": {
		"plaintext": "html"
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"[mdx]": {
		"editor.quickSuggestions": {
			"other": "off",
			"comments": "off",
			"strings": "off"
		},
		"editor.rulers": [60, 80]
	}
}
